#!/usr/bin/python
# vim: set expandtab:
# vim: set tabstop=4:
# vim: set autoindent:

import sqlite3
import readline
import atexit
from commands import *
import os
os.chdir("/srv/filter")
del os

# Connect to SQLite.
conn = sqlite3.connect('data.db')
atexit.register(conn.close)

# Try and read history file.
import os
histfile = os.path.join(os.path.expanduser("~"), ".filterhist")
try:
    readline.read_history_file(histfile)
except IOError:
    pass
atexit.register(readline.write_history_file, histfile)
del os, histfile

# Make a list of commands.
commands = {}
commands["help"] = HelpCommand()
commands["computer"] = ComputerCommand()
commands["quota"] = QuotaCommand()
commands["tor"] = TorCommand()
commands["reset"] = ResetCommand()

# Main loop.
print "Quota management system - control program"
while True:
    line = raw_input("> ").strip()
    if (line == ""):
        continue
    args = line.split(' ');
    if (len(args) == 0):
        continue
    cmd = args.pop(0)
    if (cmd.lower() == "quit"):
        break
    if (cmd.lower() in commands):
        c = conn.cursor()
        commands[cmd.lower()].handle(conn, c, args)
        c.close()
    else:
        print "Unknown command.  See 'help'."
